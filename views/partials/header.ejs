    <link rel="stylesheet" href="/main.css">
    
    <script type="text/javascript">

    function toggle_visibility(id) {
       var e = document.getElementById(id);
       if(e.innerText == 'A')
          e.innerText = 'B';
       else
          e.innerText = 'A';
    }

</script>
    
