      <a class="navbar-brand">Aircraft Cine</a>
      <form class= "delete-form" action="/?_method=DELETE" method="POST">
        <input class="btn btn-danger" type="submit" value="Delete">
      </form>
      
       <a href="#" class="btn btn-success" onclick="toggle_visibility('side');">Click here to toggle footer side</a>
     
      <form class="form-inline" action="/new" method="POST">
        <input class="form-control mr-sm-2" type="search" placeholder="Search for a poster" aria-label="Search" name="search" required>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
