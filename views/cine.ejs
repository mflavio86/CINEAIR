<% include partials/header %>
    <div class="container">    
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="head" >PR-GVI<span style="color:#232F34;"> CINE</span></h1>
            </div>
        </div>
         <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% movies.forEach(function(movie){ %>
        <div class="col-3" >
            <form action="/?_method=DELETE" method="POST" class="card m-2 mb-4" id="<%= movie.id %>" >
               <a href="javascript:{}" onclick="document.getElementById('<%= movie.id %>').submit(); return false;">
                <input type="text" value="<%= movie.id %>" name="movieID" hidden>
                <img onmouseover="imgADD('<%= movie.id %>')" onmouseout="imgRemove('<%= movie.id %>')" src="<%= movie.image %>" class="card-img" style="height:20rem;" id="<%= movie.id %>" > 
                </a>
            </form>
        </div>
        <% }); %>
        </div>
   
    <div id="side" class="card-footer text-right footer"> A </div> 
  <!-- container END Div -->
    </div>
<% include partials/footer %>